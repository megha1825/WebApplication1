@page
@model WebApplication1.Pages.signupModel
@{
    ViewData["Title"] = "Signup Page";
}



<div class="container mt-5">
    <h2 class="text-center">Signup</h2>
    <form method="post"  enctype="multipart/form-data">
        <div class="row">
            <div class="col-lg-12 md-3 mb-3">
                <label asp-for="user.FirstName" class="form-label"></label>
                <input asp-for="user.FirstName" class="form-control" required />
                <span asp-validation-for="user.FirstName" class="text-danger"></span>
            </div>

            

            <div class="col-lg-12 md-3 mb-3">
                <label asp-for="user.Password" class="form-label"></label>
                <input asp-for="user.Password" type="password" class="form-control" required />
                <span asp-validation-for="user.Password" class="text-danger"></span>
            </div>

            <div class="col-lg-12 md-3 mb-3">
                <label asp-for="user.ConfirmPassword" class="form-label"></label>
                <input asp-for="user.ConfirmPassword" type="password" class="form-control" required />
                <span asp-validation-for="user.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.ImageFile">Upload Image</label>
                <input type="file" asp-for="user.ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="user.ImageFile" class="text-danger"></span>
            </div>
            
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary btn-block" class="form-control" asp-page-handler="send">SEND</button>
            </div>
        </div>
           

        


    </form>
</div>
